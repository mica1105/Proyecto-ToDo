extends ../layout

block content
  .container(style="margin-top:25px")
    .row.d-flex.justify-content-center
      .col-lg-6.shadow-lg.p-2.mb-5
        .card
          .card-header
            h1.text-center= titulo
          .card-body
            if(usuario)
                form.row.g-3(method="post",action="./"+usuario.id+"?_method=PUT")
                    .col-md-12 
                        label.form-label(for="password") Nueva Contrase√±a:
                        input.form-control(type="password",required ,name="password") 
                    .col-md-12.text-center
                        a.btn.btn-danger.btn-lg.me-2(href='/usuarios/perfil') Cancelar
                        input.btn.btn-primary.btn-lg(type="submit",value= "Actualizar")