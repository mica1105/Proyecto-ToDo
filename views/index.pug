extends layout

block content

    .container
        .row.justify-content-center
            .col-5(style="margin-top:25px")
                if (codigo== 'error')
                    div.alert.alert-danger.d-flex.align-items-center(role="alert") 
                        i.fa.fa-exclamation-triangle.fa-2x
                            span=   mensaje
                if (codigo== 'success')
                    div.alert.alert-success.d-flex.align-items-center(role="alert") 
                        i.fa.fa-check-circle-o.fa-2x
                            span=   mensaje            
                .card.text-center.text-white.bg-dark.mb-3(style="width: 30rem;")
                    .card-header
                        h1
                            i.ace-icon.fa.fa-users
                                span   Sistema de Usuarios
    
                    .card-body
                        form.row.g-3(method="post",action="/auth/login")
                            div.col-md-12
                                div.input-group
                                    span.input-group-text
                                        i.fa.fa-user-circle
                                    input.form-control(type="email" name="email" placeholder="Email")
                                        
                            div.col-md-12
                                div.input-group
                                    span.input-group-text
                                        i.fa.fa-key
                                    input.form-control(type="password" name="password" placeholder="Contraseña")
                            div.d-flex.justify-content-center.mt-3
                                input.btn.btn-primary(type="submit",value="Entrar")
                            
                            div.d-flex.align-items-center.justify-content-center.pb-4
                                p.mb-0.me-2 ¿No tiene una cuenta? 
                                    a(href='/usuarios/insertar') Registrarse
                            
                            hr.my-4
                            h2.fs-5.fw-bold.mb-3 O use un tercero
                            a.w-100.py-2.mb-2.btn.btn-outline-secondary.rounded-4(href="/auth/github")
                                i.ace-icon.fa.fa-github.fa-2x
                                    span   Login con Github