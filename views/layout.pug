doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.container-fluid.px-0
      nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bd-navbar.bg-dark
        .container
            a.navbar-brand-flex.align-items-center.mb-2.mb-lg-0.text-white.text-decoration-none(href='/') 
              img.bi.me2.h4(src="/images/logo.png", width="40", height="32", aria-label="Bootstrap") 
              p To Do
            if(usuario)
              ul.navbar-nav.nav.col-12.col-lg-auto.my-2.justify-content-center.my-md-0
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/listas/')   
                    i.fa.fa-list-alt.fa-2x 
                    p  Lista 
                li.nav-item
                  a.nav-link.px-2.h6.me-2(href='/items/')
                    i.fa.fa-tags.fa-2x 
                    p  Items
                if(usuario.rol == 1)
                  li.nav-item
                    a.nav-link.px-2.h6.me-2(href='/categorias/') 
                      i.fa.fa-archive.fa-2x 
                      p  Categorias
                  li.nav-item
                    a.nav-link.px-2.h6.me-2(href='/usuarios/') 
                      i.fa.fa-users.fa-2x 
                      p  Usuarios

              div.text-end
                a.btn.btn-outline-primary.me-2(href='/usuarios/perfil')
                  i.fa.fa-user-circle.fa-2x
                  qu  #{usuario.nombre}

                a.btn.btn-outline-secondary(href='/auth/logout') Logout 

    div.b-example-divider      
    block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
